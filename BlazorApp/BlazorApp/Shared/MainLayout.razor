@inherits LayoutComponentBase


<Layout>
    <Header class="header"  Style="position: fixed; z-index: 1; width: 100%; display:flex;align-content:center">
        <h1 style="font-size: large; color:white; align-self:center">
            What should I do?
        </h1>
    </Header>
    <Layout>
        <Sider Style="overflow: auto;height: 100vh;position: fixed;left: 0;" Theme="SiderTheme.Light">
            <div class="header" />
            <Menu Theme="MenuTheme.Light" Mode="MenuMode.Inline" DefaultSelectedKeys=@(new[]{"4"})>
                <MenuItem Key="1" RouterLink="/counter">
                    <Icon Type="user" Theme="outline" />
                    <span class="nav-text">Counter</span>
                </MenuItem>
                <MenuItem Key="2">
                    <Icon Type="video-camera" Theme="outline" />
                    <span class="nav-text">nav 2</span>
                </MenuItem>
                <MenuItem Key="3">
                    <Icon Type="upload" Theme="outline" />
                    <span class="nav-text">nav 3</span>
                </MenuItem>
                <MenuItem Key="4">
                    <Icon Type="bar-chart" Theme="outline" />
                    <span class="nav-text">nav 4</span>
                </MenuItem>
                <MenuItem Key="5">
                    <Icon Type="cloud" Theme="outline" />
                    <span class="nav-text">nav 5</span>
                </MenuItem>
                <MenuItem Key="6">
                    <Icon Type="appstore" Theme="outline" />
                    <span class="nav-text">nav 6</span>
                </MenuItem>
                <MenuItem Key="7">
                    <Icon Type="team" Theme="outline" />
                    <span class="nav-text">nav 7</span>
                </MenuItem>
                <MenuItem Key="8">
                    <Icon Type="shop" Theme="outline" />
                    <span class="nav-text">nav 8</span>
                </MenuItem>
            </Menu>
        </Sider>
        <Layout Class="site-layout" Style=" margin-left: 200px">
            <Content Style="margin: 24px 16px 0; overflow: initial; ">
                <div class="header" />
                @Body
            </Content>
            <Footer Style=" text-align: center;">Ant Design ©2018 Created by Ant UED</Footer>
        </Layout>
    </Layout>
</Layout>


<style>
    .header{
        height: 48px;
    }

    #components-layout-demo-fixed-sider .logo {
        height: 32px;
        background: rgba(255, 255, 255, 0.2);
        margin: 16px;
    }

    .site-layout .site-layout-background {
        background: #fff;
    }
</style>

